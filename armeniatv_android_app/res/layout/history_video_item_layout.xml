<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="wrap_content">
    <RelativeLayout android:layout_width="150dip" android:id="@+id/history_container" android:layout_height="100dip">
        <WebView android:layout_height="100dip" android:layout_width="147dip" android:id="@+id/history_video_image"></WebView>
        <ImageView android:layout_marginRight="5dip" android:layout_width="30dip" android:src="@drawable/close_button" android:layout_height="30dip" android:layout_marginTop="5dip" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:id="@+id/history_close_btn"></ImageView>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:background="@drawable/label_play" android:layout_marginBottom="7dip" android:id="@+id/history_play_label">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/play" android:layout_centerInParent="true" android:paddingBottom="4dip" android:paddingLeft="4dip" android:id="@+id/history_play_btn"></ImageView>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:layout_below="@+id/history_container" android:layout_width="wrap_content" android:text="TextView" android:id="@+id/history_name" android:layout_height="wrap_content"></TextView>
</RelativeLayout>
